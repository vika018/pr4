<Window x:Class="WpfApp6.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp6"
        mc:Ignorable="d"
        Title="MainWindow" Height="300" Width="250">
    <Grid>
        <Label Content="Введите N:" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="10,10,0,0"/>
        <TextBox x:Name="InputN" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,40,0,0"/>
        <Button Content="Найти числа-близнецы" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Margin="10,80,0,0" Click="FindTwins_Click"/>
        <TextBlock x:Name="ResultBlock" TextWrapping="Wrap" HorizontalAlignment="Left" VerticalAlignment="Top" Width="360" Height="180" Margin="10,120,0,0"/>
    </Grid>
</Window>
